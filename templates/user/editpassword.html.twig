{% extends 'users.html.twig' %}

{% block title %}
  Modify my Account | Blog
{% endblock %}

{% block content %}
  <div class="w-75 m-auto">
    <fieldset class="p-2">
      <legend>
        Edit the password of
      </legend>
      <p class="fs-3 fw-bold">
        {{ app.user.username }}
        <div id="passwordHelpBlock"
          class="fs-6 text-danger border border-danger p-2">
          Your password must be 8-20 characters long, contain letters and
          numbers, and must not contain spaces, special characters, or emoji.
        </div>
      </p>
      {% for error in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
          {{ error }}
        </div>
      {% endfor %}
    </fieldset>
    <form method="POST">
      <label for="inputPassword5" class="form-label">Password</label>
      <input type="password"
        name="password1"
        id="inputPassword5"
        class="form-control"
        aria-describedby="passwordHelpBlock" />
      <br />
      <label for="inputPassword5" class="form-label">
        Confirm your password
      </label>
      <input type="password"
        name="password2"
        id="inputPassword5"
        class="form-control"
        aria-describedby="passwordHelpBlock" />

      <button class="btn btn-danger my-3">Edit Password</button>
    </form>
  </div>
{% endblock %}
