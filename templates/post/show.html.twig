{% extends 'base.html.twig' %}

{% block title %}
  {{ post.title }} | Blog
{% endblock %}

{% block imgheader %}
  url('/assets/img/post-bg.jpg')
{% endblock %}

{% block headerTitle %}
  {% if app.user %}
    {{ post.title }}
  {% else %}
    <h2>
      You need to register
    </h2>
  {% endif %}
{% endblock %}

{% block subheading %}
  {% if app.user %}
    {{ post.description }}
    <br />
    <br />
    <a href="{{
      path(
        'cat.list',
        {
          id: post.category.id
        }
      )
      }}"
      class="bg-primary text-light p-1 rounded my-1">
      {{ post.category.name }}
    </a>
  {% else %}
    <h2>
      Register now
    </h2>
    <br />
    <a href="{{ path('app_register') }}"
      class="bg-primary text-light p-1 rounded my-1">
      Register now!
    </a>
    <span class="text-light">or</span>
    <a href="{{ path('app_login') }}"
      class="bg-primary text-light p-1 rounded my-1">
      Log in!
    </a>
  {% endif %}
{% endblock %}

{% block content %}
  <article class="mb-4">
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          {% if app.user %}
            <p>
              <div class="text-center text-secondary mb-3">
                <a href="{{
                  path(
                    'post_like',
                    {
                      id: post.id
                    }
                  )
                  }}"
                  class="btn btn-link p-0 js-like">
                  {% if post.isLikedByUser(app.user) %}
                    <span class="fs-1 star" style="color: yellow;">
                      &starf;
                    </span>
                  {% else %}
                    <span class="fs-1 star" style="color: grey;">&starf;</span>
                  {% endif %}

                  <span class="m-0 js-likes">{{ post.likes|length }}</span>
                  <span>like(s)</span>
                </a>
              </div>
              {{ post.content }}
            </p>

            <p>
              Placeholder text by
              <a href="http://spaceipsum.com/">Space Ipsum</a>
              &middot; Images by
              <a href="https://www.flickr.com/photos/nasacommons/">
                NASA on The Commons
              </a>
            </p>

            <h3>
              {{ post.comments|length }} commentaire(s)
            </h3>
            <hr />

            <div class="my-3">
              {{ form(formCom) }}
            </div>
            <hr />

            {% for com in post.comments %}
              <div class="row my-2">
                <div class="col">
                  <div class="fw-bolder">
                    {{ com.user.username }}
                    <small class="text-secondary">
                      {{ com.createdAt|date('m/d/Y - H:i') }}
                    </small>
                  </div>
                  {{ com.content }}
                </div>
                {% if com.user.id == app.user.id or is_granted('ROLE_EDITOR') %}
                  <div class="col">
                    <a class="btn btn-danger rounded-3"
                      href="{{
                      path(
                        'comment_delete',
                        {
                          commentId: com.id,
                          postId: post.id
                        }
                      )
                      }}">
                      Delete
                    </a>
                  </div>
                {% else %}

                {% endif %}
              </div>
              <hr />
            {% endfor %}
          {% else %}
            <h1>
              Vous devez être connecté pour accéder au détails de nos posts
            </h1>
          {% endif %}
        </div>
      </div>
    </div>
  </article>
{% endblock %}

{% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    function onClickBtnLike(event) { event.preventDefault();

    const url = this.href; const likeCount =
    this.querySelector('span.js-likes'); const iconLike =
    this.querySelector('span.star');

    axios.get(url).then(function(response) { likeCount.textContent =
    response.data.likes;

    if(iconLike.style.color = "grey") { iconLike.style.color = "yellow";
    console.log(iconLike) } else if(iconLike.style.color = "yellow") {
    iconLike.style.color = "grey"; console.log(iconLike) }

    }).catch(function(e) { /*if(e.response.status === 403) { alert("You can't
    like if you're not connected"); } else { alert("Errors occurs, try again
    later"); }*/

    console.log(e) }) }

    document.querySelectorAll('a.js-like').forEach(function(link){
    link.addEventListener('click', onClickBtnLike) });
  </script>
{% endblock %}
